<% if current_user %>
  <form action="/spaces" method="post">
  	<label for="name">
  		Name of Space:
  		<input type="text" name="name"/>
  	</label>
  	<label for="address">
  		Address:
  		<input type="text" name="address"/>
  	</label>
  	<label for="description">
  		Description:
  		<textarea name="description" rows="10" cols="30"></textarea>
  	</label>
  	<label for="price">
  		Price:
  		<input type="text" name="price"/>
  	</label>
  	<button type="submit" class="button_styled" >Add Space</button>
  </form>
<% else %>
  <a type="button" class="button_styled" href="/">Please sign up or sign in</a>
<% end %>
