<div class="grid">
  <div class="col-3">
    <br />
  </div>
  <div class="col-6">
    <% if current_user %>
      <form action="/spaces" method="post" class="form_group">
      	<label for="name">
      		Name of Space:
        </label>
    		<input type="text" name="name"/>
      	<label for="address">
      		Address:
        </label>
    		<input type="text" name="address"/>
      	<label for="description">
      		Description:
        </label>
    		<textarea name="description" rows="10" cols="30"></textarea>
      	<label for="price" padding-top="10px">
      		Price:
        </label>
    		<input type="text" name="price"/>
      	<label for="available_from">
      		Available from:
        </label>
    		<input type="date" name="available_from"/>
      	<label for="available_to">
      		Available to:
        </label>
    		<input type="date" name="available_to"/>
      	<button type="submit" class="button_styled" >Add Space</button>
      </form>
    <% else %>
      <a type="button" class="button_styled" href="/">Please sign up or sign in</a>
    <% end %>
  </div>
  <div class="col-3">
    <br />
  </div>
</div>
